{
    "name": "phpsa/sc-free-shipping",
    "description": "A free shipping module for Statamic's Simple commerce",
    "license": "MIT",
    "keywords": [
        "statamic",
        "simple-commerce",
        "shipping",
        "addon"
    ],
    "type": "library",
    "authors": [
        {
            "name": "Craig Smith",
            "email": "vxdhost@gmail.com"
        }
    ],
    "require": {
        "statamic/cms": "^3.0"
    },
    "require-dev": {
        "orchestra/testbench": "^4.0|^5.0",
        "phpunit/phpunit": "^8.4|^9.0"
    },
    "autoload": {
        "psr-4": {
            "Phpsa\\ScFreeShipping\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Phpsa\\ScFreeShipping\\Tests\\": "tests"
        }
    },
    "scripts": {
        "phpunit": "phpunit"
    },
    "extra": {
        "statamic": {
            "name": "Simple Cart Free Shipping Addon",
            "description": "A free shipping module for Statamic's Simple commerce"
        },
        "laravel": {
            "providers": [
                "Phpsa\\ScFreeShipping\\ServiceProvider"
            ]
        }
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
